rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own tenant data
    match /tenants/{tenantId}/events/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == tenantId;
    }
    
    // Allow users to read and write their own tenant data for any subcollection
    match /tenants/{tenantId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == tenantId;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}